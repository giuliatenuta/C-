#include <iostream>
#include <vector>
#include <ctime>
#include <stdlib.h>
#include <cstdlib>
using namespace std;

void crea_vettore(int vett[20]) {
	srand(time(NULL));
	for (int i=0; i<20; i++) {
		int rn =rand()%20;
		vett[i] = rn;
	}
	for (int i=0; i<20; i++) {
		cout << vett[i] << endl;
	}
}

void numeri_pari(int vett[20]){
	cout << "Numeri pari:\n";
	for (int i=0; i<20; i++) {
		if (vett[i]%2 == 0) {
			cout << vett[i] << endl;
		}
	}
}

void posizione_pari(int vett[20]){
	cout << "Numeri in posizione pari:\n";
	for (int i=0; i<20; i++) {
		if (i%2 == 0) {
			cout << vett[i] << endl;
		}
	}
}

void aggiungi_togli(int vett[20]) {
	for (int i=0; i<20; i++) {
		if (vett[i]>0) {
			vett[i] = vett[i]+1;
		} else {
			vett[i] = vett[i]-1;
		}
	}
	cout << "Aggiunta un'unitÃ  ai numeri positivi e sottratta ai numeri negativi:\n";
	for (int i=0; i<20; i++) {
		cout << vett[i] << endl;
	}
}

void elemento_indice(int vett[20], int posizione) {
	cout << "Posizione dell'elemento da visualizzare(da 1 a 20): ";
	cin >> posizione;
	while (posizione>20 || posizione <=0) {
		cout << "Posizione non presente nel vettore!";
		cout << "Riprova:\n";
		cin >> posizione;
	} 
	cout << "Elemento in posizione " << posizione << " : " << vett[posizione-1] << endl;
}

void media(int vett[20]){
	float media;
	for(int i = 0 ; i <20; i++){
       media += vett[i];
    }
    media = media/ 20;
    int contatore = 0;
    for(int i = 0 ; i <20; i++){
        if(vett[i] > media) {
        	contatore ++;
		} 
    }
    cout << "I numeri maggiori alla media sono in tutto : " << contatore << endl;
    cout << "Numeri superiori alla media:\n";
    for (int i=0; i<20; i++) {
		if (vett[i]>media) {
			cout << vett[i] << endl;
		}
	}
}

void primo_ultimo_elemento(int vett[20]) {
	int u;
	u = vett[19];
	vett[19] = vett[0];
	vett[0] = u;
	cout << "Primo elemento: " << vett[0] << endl;
	cout << "Ultimo elemento: " << vett[19] << endl;
}

int valore_massimo(int vett[20]) {
	int max=0;
	for (int i=0; i<20; i++) {
		if (vett[i]> max) {
			max = vett[i];
		}
	}
	cout << "Valore massimo: " << max;
	cout << "\nPosizione/i del numero maggiore: \n";
	for (int i=0; i<20; i++) {
		if (vett[i] == max) {
			cout << i << endl;
		}
	}
}

int main(){
	int vettore[20];
	int posizione;
	crea_vettore(vettore);
	numeri_pari(vettore);
	posizione_pari(vettore);
	aggiungi_togli(vettore);
	elemento_indice(vettore, posizione);
	media(vettore); 
	primo_ultimo_elemento(vettore);
	valore_massimo(vettore);
	return 0;
}
